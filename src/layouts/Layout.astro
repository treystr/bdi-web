---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import AnnouncementBar from "../components/AnnouncementBar.astro";
// import ThemeSwitcher from "../components/ThemeSwitcher.astro";
import { SEO, siteConfig, announcementBarSetting } from "../data/config";
import 'aos/dist/aos.css';
import '@fortawesome/fontawesome-free/css/all.min.css';
import { themeSetting } from "../data/config";
const { theme } = themeSetting;

const { SiteName, Separator, defaultDescription, defaultOgImage } = SEO;

interface Props {
	title?: string;
	description?: string;
	image?: string;
	footerCta?: {
		title: string;
		description: string;
		hideCta: boolean;
		button: {
			text: string;
			link: string;
			target?: string;
		};
	};
	canonicalUrl?: string;
	fullscreenHero?: boolean; // Enable fullscreen hero mode
}

const { title, description, image, footerCta, canonicalUrl, fullscreenHero } = Astro.props;

/**
 * SEO Metadata Truncation Utilities
 * 
 * SEO Best Practices:
 * - Page titles: Maximum 70 characters (580 pixels) total
 * - Meta descriptions: Maximum 160 characters (1000 pixels)
 * 
 * Title format: "{pageTitle} | Bitcoin District Initiative"
 * Site name suffix: 32 characters (" | Bitcoin District Initiative")
 * Max page title portion: ~38 characters (to stay under 70 total)
 */

// Truncate title to ensure total length â‰¤70 chars (accounting for site name suffix)
function truncateTitle(pageTitle: string, maxLength: number = 38): string {
	if (pageTitle.length <= maxLength) return pageTitle;
	
	// Try to truncate at word boundary
	const truncated = pageTitle.substring(0, maxLength);
	const lastSpace = truncated.lastIndexOf(' ');
	
	if (lastSpace > maxLength * 0.7) {
		// If we found a space reasonably close to the end, cut there
		return truncated.substring(0, lastSpace) + '...';
	}
	
	// Otherwise, cut at maxLength
	return truncated + '...';
}

// Truncate description to max 160 chars, preserving word boundaries
function truncateDescription(desc: string, maxLength: number = 160): string {
	if (desc.length <= maxLength) return desc;
	
	// Try to truncate at word boundary
	const truncated = desc.substring(0, maxLength);
	const lastSpace = truncated.lastIndexOf(' ');
	
	if (lastSpace > maxLength * 0.7) {
		// If we found a space reasonably close to the end, cut there
		return truncated.substring(0, lastSpace) + '...';
	}
	
	// Otherwise, cut at maxLength
	return truncated + '...';
}

// Build page title with truncation
const siteNameSuffix = ` ${Separator} ${SiteName}`; // 32 characters
const maxPageTitleLength = 38; // Leaves room for 32-char suffix to stay under 70 total
const rawPageTitle = title || '';
const truncatedPageTitle = rawPageTitle ? truncateTitle(rawPageTitle, maxPageTitleLength) : '';
const pageTitle = truncatedPageTitle ? `${truncatedPageTitle}${siteNameSuffix}` : SiteName;

// Build page description with truncation
const rawDescription = description || defaultDescription || '';
const pageDescription = truncateDescription(rawDescription, 160);
const pageImage = image || defaultOgImage || '';
const canonicalPath = canonicalUrl || Astro.url.pathname;
const fullCanonicalUrl = new URL(canonicalPath, siteConfig.siteUrl).toString();

// Check if announcement bar should be shown
const currentPath = Astro.url.pathname;
const showAnnouncementBar = announcementBarSetting.enabled && (
    announcementBarSetting.showOnPages.length === 0 ||
    announcementBarSetting.showOnPages.some(page => {
        const normalizedPage = page === '/' ? '/' : page.replace(/\/$/, '');
        const normalizedCurrent = currentPath === '/' ? '/' : currentPath.replace(/\/$/, '');
        return normalizedCurrent === normalizedPage;
    })
);

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="canonical" href={fullCanonicalUrl} />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<meta name="description" content={pageDescription} />
		<meta name="robots" content="index, follow" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Bruno+Ace+SC&family=Noto+Sans+KR:wght@100..900&family=Ubuntu:wght@500&display=swap" rel="stylesheet">
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={fullCanonicalUrl} />
		<meta property="og:title" content={pageTitle} />
		<meta property="og:description" content={pageDescription} />
		{pageImage && <meta property="og:image" content={new URL(pageImage, siteConfig.siteUrl).toString()} />}

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={fullCanonicalUrl} />
		<meta property="twitter:title" content={pageTitle} />
		<meta property="twitter:description" content={pageDescription} />
		{pageImage && <meta property="twitter:image" content={new URL(pageImage, siteConfig.siteUrl).toString()} />}
	</head>
	<body data-theme={theme} class:list={[
		fullscreenHero ? 'fullscreen-hero-layout' : '',
		showAnnouncementBar ? 'has-announcement-bar' : ''
	]}>
		<AnnouncementBar currentPath={currentPath} />
		<Header overlayMode={fullscreenHero} />
		<slot />
		<Footer footerCta={footerCta} />
		
		<script>
			import AOS from 'aos';
			AOS.init({
				duration: 800,
				once: true,
				offset: 0,
				anchorPlacement: 'top-bottom',
				startEvent: 'load'
			});
		</script>
	</body>
</html>
