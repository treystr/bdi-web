---
interface Props {
  size?: number;
  class?: string;
}

const { size = 24, class: className } = Astro.props;
---
<span class={`inline-flex items-center justify-center ${className ?? ''}`} style={`width: ${size}px; height: ${size}px;`}>
  <i class="fab fa-meetup" style={`font-size: ${size}px; line-height: 1;`}></i>
</span> 