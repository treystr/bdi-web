---
import Button from '@components/ui/Button.astro';
interface Props {
    // Existing props (kept for backward compatibility)
    number?: number;
    date: string;
    blockHeight?: number;
    businessName?: string;
    businessWebsite?: string;
    photoUrl?: string;
    description: string;

    // New generic props for reuse
    title?: string;
    imageSrc?: string;
    href?: string; // internal link
    badgeText?: string; // optional badge overlay (e.g., Completed)
    showDate?: boolean; // whether to render the date (default true)
}

const { number, date, blockHeight, businessName, businessWebsite, photoUrl, description, title, imageSrc, href, badgeText, showDate = true } = Astro.props as Props;

const formattedDate = showDate && date
    ? new Intl.DateTimeFormat('en-US', { year: 'numeric', month: 'long', day: 'numeric' }).format(new Date(date))
    : '';

// Title and image resolution with fallbacks for backward compatibility
const cardTitle = (title ?? businessName) as string;
const resolvedImageSrc = (imageSrc ?? photoUrl ?? '/images/placeholder-business.jpg') as string;

// Format block height without commas
const formattedBlockHeight = typeof blockHeight === 'number' ? blockHeight.toString() : '';

// No preview: show full description on card
---

<article class="initiative-card" data-aos="fade-up">
    <!-- Card Header -->
    <div class="card-header">
        {typeof number !== 'undefined' && <div class="card-number">{number}</div>}
        <h3 class="card-business-name">
            {href ? (
                <a href={href}>
                    {cardTitle}
                </a>
            ) : businessWebsite ? (
                <a href={businessWebsite} target="_blank" rel="noopener noreferrer">
                    {cardTitle}
                    <svg class="external-link-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                        <polyline points="15 3 21 3 21 9"></polyline>
                        <line x1="10" y1="14" x2="21" y2="3"></line>
                    </svg>
                </a>
            ) : (
                <span>{cardTitle}</span>
            )}
        </h3>
    </div>

    <!-- Card Image -->
    {href ? (
        <a href={href} class="card-image-link">
            <div class="card-image">
                <img src={resolvedImageSrc} alt={cardTitle} loading="lazy" />
                {badgeText && (
                    <div class="card-badge">{badgeText}</div>
                )}
            </div>
        </a>
    ) : (
        <div class="card-image">
            <img src={resolvedImageSrc} alt={cardTitle} loading="lazy" />
            {badgeText && (
                <div class="card-badge">{badgeText}</div>
            )}
        </div>
    )}

    <!-- Card Footer -->
    <div class="card-footer">
        <div class="card-meta">
            {showDate && (
                <time datetime={date} class="card-date">
                    {formattedDate}
                </time>
            )}
            {typeof blockHeight === 'number' && (
                <div class="card-block-height">
                    Block #{formattedBlockHeight}
                </div>
            )}
        </div>
        
        <div class="card-description" data-full-description={description}>
            <p class="description-full">{description}</p>
            {href && (
                <div class="learn-more-wrapper">
                    <Button href={href} variant="primary">
                        Learn More
                    </Button>
                </div>
            )}
        </div>
    </div>
</article>

<style>
    .initiative-card {
        border: 1px solid rgba(var(--color-body-base-rgb), 0.1);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: var(--color-base);
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .initiative-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
    }

    /* Card Header */
    .card-header {
        padding: 1.25rem 1.5rem 1rem;
        border-bottom: 1px solid rgba(var(--color-body-base-rgb), 0.08);
        background: rgba(var(--color-accent-rgb), 0.02);
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .card-number {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--color-accent);
        flex-shrink: 0;
        width: 2.5rem;
        text-align: center;
        background: rgba(var(--color-accent-rgb), 0.1);
        border-radius: 8px;
        padding: 0.25rem 0;
    }

    .card-business-name {
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0;
        color: var(--color-body-base);
        line-height: 1.3;
        flex: 1;
    }

    .card-business-name a {
        color: inherit;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: color 0.2s ease;
    }

    .card-business-name a:hover {
        color: var(--color-accent);
    }

    .external-link-icon {
        flex-shrink: 0;
        opacity: 0.6;
        transition: opacity 0.2s ease;
    }

    .card-business-name a:hover .external-link-icon {
        opacity: 1;
    }

    /* Card Image */
    .card-image {
        aspect-ratio: 3 / 2;
        overflow: hidden;
        position: relative;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform 0.3s ease;
    }

    .initiative-card:hover .card-image img {
        transform: scale(1.02);
    }

    .card-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
        font-weight: 700;
        background: rgba(16, 185, 129, 0.15);
        color: #059669;
        border-radius: 9999px;
        line-height: 1;
    }

    /* Card Footer */
    .card-footer {
        padding: 1.25rem 1.5rem;
        background: var(--color-base);
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .card-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .card-date {
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--color-accent);
    }

    .card-block-height {
        font-size: 0.75rem;
        color: rgba(var(--color-body-base-rgb), 0.6);
        font-family: monospace;
        background: rgba(var(--color-body-base-rgb), 0.05);
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
    }

    .card-description {
        margin: 0;
        flex: 1;
        display: flex;
        flex-direction: column;
        min-height: 0;
    }

    .card-description .description-full {
        font-size: 0.9375rem;
        line-height: 1.6;
        color: rgba(var(--color-body-base-rgb), 0.8);
        margin: 0 0 0.75rem 0;
        transition: opacity 0.3s ease;
        flex-shrink: 0;
    }

    .learn-more-wrapper {
        margin-top: auto;
        align-self: flex-start;
    }

    /* Mobile Responsiveness */
    @media (max-width: 768px) {
        .card-header {
            padding: 1rem 1.25rem 0.75rem;
        }

        .card-number {
            font-size: 1.25rem;
            width: 2rem;
        }

        .card-business-name {
            font-size: 1.125rem;
        }

        .card-image {
            aspect-ratio: 4 / 3;
        }

        .card-footer {
            padding: 1rem 1.25rem;
        }
    }
</style>

<!-- No client-side script needed since description is always fully shown. -->
