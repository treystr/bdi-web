---
import { footerMenu, legalMenu } from '@data/menu';
import Button from '@components/ui/Button.astro';
import { siteConfig } from '@data/config';
import SocialBar from '@components/ui/SocialBar.astro';
import SignUp from '@components/forms/SignUp.astro';

interface ButtonProps {
  text: string;
  link: string;
  target?: string;
}

interface Props {
  footerCta?: {
    title: string;
    description: string;
    hideCta: boolean;
    button: ButtonProps;
  };
}

const { footerCta } = Astro.props;

const defaultCta = {
  title: "Take Initiative",
  description: "Support our mission to create positive change in our community. Your involvement helps us reach more people and make a greater impact.",
  hideCta: true,
  button: {
    text: "Contact Us",
    link: "/contact",
    target: "_self"
  }
};

const cta = footerCta || defaultCta;
const currentYear = new Date().getFullYear();
---

<footer class={`bg-black text-white ${cta.hideCta ? 'pt-8' : ''}`}>
  <div class="site-container--content mx-auto px-4">
    {!cta.hideCta && (
      <div class="text-center py-8 mb-8">
        <h2 class="text-2xl md:text-3xl font-bold mb-3" data-aos="fade-up">{cta.title}</h2>
        <p class="text-white mb-6 max-w-2xl mx-auto text-sm md:text-base" data-aos="fade-up" data-aos-delay="100">
          {cta.description}
        </p>
        <Button 
          href={cta.button.link} 
          variant="ghostLight"
          size="lg"
          data-aos="fade-up"
          data-aos-delay="200"
          {...(cta.button.target && { target: cta.button.target })}
        >
          {cta.button.text}
        </Button>
      </div>
    )}

    <!-- Minimal Footer -->
    <div class="text-center pt-4 pb-8 space-y-4">

      <!-- Social Icons -->
      <div>
        <SocialBar />
      </div>
      
      <!-- Horizontal Links with Dots -->
      <div>
        <nav>
          <ul class="flex flex-wrap justify-center gap-1 text-sm">
            {[...footerMenu, ...legalMenu].map((item, index, array) => (
              <li class="flex items-center">
                <a 
                  href={item.link} 
                  class="text-body-dark hover:text-white transition-colors px-2"
                >
                  {item.name}
                </a>
                {index < array.length - 1 && <span class="text-body-dark">•</span>}
              </li>
            ))}
          </ul>
        </nav>
      </div>

      <!-- Newsletter Signup -->
      <div class="mb-4">
        <SignUp size="small" />
      </div>
      
      <!-- Descriptive Line -->
      <div>
        <p class="text-body-dark text-xs max-w-4xl mx-auto">
          Bitcoin District Initiative is a DC 501(c)(3) tax-exempt not-for-profit organization. All gifts and donations are tax-deductible to the extent allowed by law.
        </p>
      </div>
      
      <!-- Copyright -->
      <div>
        <p class="text-body-dark text-xs">
          © {currentYear} {siteConfig.companyName} • Established Block <a href='https://mempool.space/block/902556' target='_blank' class='text-white'>902556</a>
        </p>
      </div>
    </div>
  </div>
</footer>