---
export interface Filter {
  id: string;
  label: string;
  value: string | null; // null means "all"
  icon?: string;
}

export interface Props {
  filters: Filter[];
  defaultFilter?: string;
  filterTarget?: string; // CSS selector for items to filter
  class?: string;
}

const {
  filters,
  defaultFilter = 'all',
  filterTarget = '[data-filter-item]',
  class: className = '',
} = Astro.props;
---

<div class={`filter-buttons-container ${className}`}>
  <div class="filter-buttons-wrapper">
    <div class="filter-buttons" role="group" aria-label="Filter press content">
      {filters.map((filter) => (
        <button
          type="button"
          data-filter-button={filter.id}
          data-filter-value={filter.value || 'all'}
          aria-pressed={filter.id === defaultFilter ? 'true' : 'false'}
          class={`filter-button ${filter.id === defaultFilter ? 'active' : ''}`}
        >
          {filter.icon && <span class="filter-icon" aria-hidden="true">{filter.icon}</span>}
          <span class="filter-label">{filter.label}</span>
        </button>
      ))}
    </div>
  </div>
</div>

<style>
  .filter-buttons-container {
    width: 100%;
    padding: 1.5rem 0;
  }

  .filter-buttons-wrapper {
    max-width: var(--container-content);
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: center;
  }

  .filter-buttons {
    display: flex;
    gap: 0.75rem;
    padding: 0.5rem;
    background: var(--color-background);
    border-radius: 3rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    width: fit-content;
  }

  .filter-button {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.75rem;
    background: transparent;
    border: none;
    border-radius: 2rem;
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-body-base);
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
    min-height: 44px;
    outline: none;
  }

  .filter-button:hover:not(.active) {
    background: rgba(0, 0, 0, 0.04);
    color: var(--color-primary);
  }

  .filter-button:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .filter-button.active {
    background: var(--color-primary);
    color: white;
    box-shadow: 0 4px 12px rgba(53, 87, 193, 0.25);
  }

  .filter-icon {
    font-size: 1.25rem;
    display: flex;
    align-items: center;
  }

  .filter-label {
    font-size: 0.95rem;
    line-height: 1;
  }

  @media (max-width: 768px) {
    .filter-buttons-container {
      padding: 1rem 0;
    }

    .filter-buttons-wrapper {
      padding: 0 0.75rem;
    }

    .filter-buttons {
      gap: 0.375rem;
      padding: 0.375rem;
      width: 100%;
      justify-content: space-between;
    }

    .filter-button {
      padding: 0.625rem 0.75rem;
      font-size: 0.85rem;
      flex: 1;
      justify-content: center;
      gap: 0.375rem;
    }

    .filter-label {
      font-size: 0.8rem;
    }

    .filter-icon {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .filter-buttons-wrapper {
      padding: 0 0.5rem;
    }

    .filter-buttons {
      gap: 0.25rem;
      padding: 0.25rem;
    }

    .filter-button {
      padding: 0.625rem 0.5rem;
      font-size: 0.75rem;
      gap: 0.25rem;
    }

    .filter-label {
      font-size: 0.7rem;
    }

    .filter-icon {
      font-size: 0.9rem;
    }
  }
</style>

<script define:vars={{ filterTarget }}>
  function initFilterButtons() {
    const filterButtons = document.querySelectorAll('[data-filter-button]');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const filterValue = button.getAttribute('data-filter-value');
        if (!filterValue) return;

        // Update button states
        filterButtons.forEach(btn => {
          btn.classList.remove('active');
          btn.setAttribute('aria-pressed', 'false');
        });
        button.classList.add('active');
        button.setAttribute('aria-pressed', 'true');

        // Filter items
        const items = document.querySelectorAll(filterTarget);
        items.forEach(item => {
          const itemType = item.getAttribute('data-filter-type');
          const itemElement = item;
          
          if (filterValue === 'all' || itemType === filterValue) {
            // Show item with fade-in
            itemElement.style.display = '';
            itemElement.style.opacity = '0';
            setTimeout(() => {
              itemElement.style.opacity = '1';
            }, 10);
          } else {
            // Hide item with fade-out
            itemElement.style.opacity = '0';
            setTimeout(() => {
              itemElement.style.display = 'none';
            }, 200);
          }
        });
      });
    });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initFilterButtons);
  } else {
    initFilterButtons();
  }

  // Re-initialize on view transitions (Astro)
  document.addEventListener('astro:page-load', initFilterButtons);
</script>

