---
export interface Tab {
  id: string;
  label: string;
  icon?: string;
}

export interface Props {
  tabs: Tab[];
  defaultTab?: string;
  class?: string;
}

const {
  tabs,
  defaultTab = tabs[0]?.id,
  class: className = '',
} = Astro.props;
---

<div class={`tab-switcher-container ${className}`}>
  <div class="tab-switcher-wrapper">
    <div class="tab-switcher" role="tablist" aria-label="Resource categories">
      {tabs.map((tab) => (
        <button
          type="button"
          role="tab"
          data-tab-button={tab.id}
          aria-selected={tab.id === defaultTab ? 'true' : 'false'}
          aria-controls={`panel-${tab.id}`}
          class={`tab-button ${tab.id === defaultTab ? 'active' : ''}`}
        >
          {tab.icon && <span class="tab-icon" aria-hidden="true">{tab.icon}</span>}
          <span class="tab-label">{tab.label}</span>
        </button>
      ))}
    </div>
  </div>
</div>

<style>
  .tab-switcher-container {
    width: 100%;
    background: var(--color-background-light);
    padding: 2rem 0 1.5rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  .tab-switcher-wrapper {
    max-width: var(--container-content);
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: center;
  }

  .tab-switcher {
    display: flex;
    gap: 0.75rem;
    padding: 0.5rem;
    background: var(--color-background);
    border-radius: 3rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    width: fit-content;
  }

  .tab-button {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.75rem;
    background: transparent;
    border: none;
    border-radius: 2rem;
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-body-base);
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
    min-height: 44px;
    outline: none;
  }

  .tab-button:hover:not(.active) {
    background: rgba(0, 0, 0, 0.04);
    color: var(--color-primary);
  }

  .tab-button:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .tab-button.active {
    background: var(--color-primary);
    color: white;
    box-shadow: 0 4px 12px rgba(53, 87, 193, 0.25);
  }

  .tab-icon {
    font-size: 1.25rem;
    display: flex;
    align-items: center;
  }

  .tab-label {
    font-size: 0.95rem;
    line-height: 1;
  }

  @media (max-width: 768px) {
    .tab-switcher-container {
      padding: 1.5rem 0 1rem;
    }

    .tab-switcher-wrapper {
      padding: 0 0.75rem;
    }

    .tab-switcher {
      gap: 0.375rem;
      padding: 0.375rem;
      width: 100%;
      justify-content: space-between;
    }

    .tab-button {
      padding: 0.625rem 0.75rem;
      font-size: 0.85rem;
      flex: 1;
      justify-content: center;
      gap: 0.375rem;
    }

    .tab-label {
      font-size: 0.8rem;
    }

    .tab-icon {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .tab-switcher-wrapper {
      padding: 0 0.5rem;
    }

    .tab-switcher {
      gap: 0.25rem;
      padding: 0.25rem;
    }

    .tab-button {
      padding: 0.625rem 0.5rem;
      font-size: 0.75rem;
      gap: 0.25rem;
    }

    .tab-label {
      font-size: 0.7rem;
    }

    .tab-icon {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 360px) {
    .tab-switcher {
      gap: 0.2rem;
      padding: 0.2rem;
    }

    .tab-button {
      padding: 0.625rem 0.375rem;
      font-size: 0.7rem;
      gap: 0.2rem;
    }

    .tab-label {
      font-size: 0.65rem;
    }

    .tab-icon {
      font-size: 0.85rem;
    }
  }
</style>

<script>
  function initTabSwitcher() {
    const tabButtons = document.querySelectorAll('[data-tab-button]');
    
    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        const tabId = button.getAttribute('data-tab-button');
        if (!tabId) return;

        // Update button states
        tabButtons.forEach(btn => {
          btn.classList.remove('active');
          btn.setAttribute('aria-selected', 'false');
        });
        button.classList.add('active');
        button.setAttribute('aria-selected', 'true');

        // Update panel visibility
        const panels = document.querySelectorAll('[data-tab-panel]');
        panels.forEach(panel => {
          const panelId = panel.getAttribute('data-tab-panel');
          const panelElement = panel as HTMLElement;
          if (panelId === tabId) {
            panel.classList.remove('hidden');
            panel.classList.add('active');
            // Trigger fade-in animation
            setTimeout(() => {
              panelElement.style.opacity = '1';
            }, 10);
          } else {
            panelElement.style.opacity = '0';
            setTimeout(() => {
              panel.classList.add('hidden');
              panel.classList.remove('active');
            }, 300);
          }
        });
      });
    });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTabSwitcher);
  } else {
    initTabSwitcher();
  }

  // Re-initialize on view transitions (Astro)
  document.addEventListener('astro:page-load', initTabSwitcher);
</script>

