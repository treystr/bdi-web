---
import { Image } from 'astro:assets';
import logo from '../assets/logo.png';
interface Props {
    variant?: 'header' | 'footer' | 'dark';
}

const { variant = 'header' } = Astro.props;

// Determine the appropriate CSS class based on the variant
const getLogoClass = () => {
    switch (variant) {
        case 'header':
            return 'text-header-logo hover:text-primary';
        case 'footer':
            return 'text-footer-logo hover:text-primary';
        case 'dark':
            return 'text-body-base hover:text-primary';
        default:
            return 'text-body-base hover:text-primary';
    }
};
---

<a href="/" class:list={['logo uppercase font-logo transition-colors duration-200 font-light flex items-center gap-1 sm:gap-2 whitespace-nowrap', getLogoClass()]}>
    <Image 
        src={logo} 
        alt="Bitcoin District Initiative Logo" 
        class="w-6 h-6 sm:w-7 sm:h-7 lg:w-8 lg:h-8 flex-shrink-0 transition-all duration-300" 
    />
    <span class="font-bold text-sm sm:text-base 2xl:inline hidden">Bitcoin District</span> <span class="text-sm sm:text-base 2xl:inline hidden">Initiative</span>
</a>
