---
interface Props {
    title: string;
    description?: string;
    background?: 'base' | 'light' | 'dark';
}

const { title, description, background = 'base' } = Astro.props;

// Background classes for theme consistency
const backgroundClasses = {
    base: 'bg-background',
    light: 'bg-background-light',
    dark: 'bg-background-dark'
};
---

<section class={`page-content ${backgroundClasses[background]} pt-24`}>
    <div class="site-container--content mx-auto px-4 py-8 sm:py-12 md:py-16">
        <h1 class="page-header-title text-headline mb-4" data-aos="fade-up">
            {title}
        </h1>
        
        {description && (
            <p class="page-header-description text-body-base text-lg md:text-xl opacity-80" data-aos="fade-up" data-aos-delay="100">
                {description}
            </p>
        )}
    </div>
</section>

<style>
    /* Removed gradient section - now using header orange border instead */
    
    .page-content {
        /* Content section with proper background */
        position: relative;
    }
    
    .page-header-title {
        font-size: var(--text-h1);
        font-weight: 700;
        line-height: 1.2;
    }
    
    .page-header-description {
        line-height: 1.6;
    }
    
    /* Mobile optimizations */
    @media (max-width: 768px) {
        .page-header-title {
            /* Keep h1 size - clamp handles mobile appropriately */
            margin-bottom: 1rem;
        }
        
        .page-header-description {
            font-size: 1rem;
        }
    }
</style>

