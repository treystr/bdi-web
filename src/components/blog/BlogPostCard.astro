---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
    title: string;
    featuredImage?: ImageMetadata;
    slug: string;
    publishDate?: Date;
}

const { title, featuredImage, slug, publishDate } = Astro.props;

// Format date
const formattedDate = publishDate
    ? new Intl.DateTimeFormat('en-US', { year: 'numeric', month: 'short', day: 'numeric' }).format(publishDate)
    : null;
---

<a
    href={`/blog/${slug}`}
    class="blog-post-card group"
>
    <div class="blog-post-card__image-container">
        {
            featuredImage ? (
                <Image
                    src={featuredImage}
                    alt={title}
                    width={600}
                    height={338}
                    class="blog-post-card__image"
                />
            ) : (
                <div class="blog-post-card__image-placeholder" />
            )
        }
        <div class="blog-post-card__overlay"></div>
    </div>

    <div class="blog-post-card__content">
        {formattedDate && (
            <time class="blog-post-card__date" datetime={publishDate?.toISOString()}>
                {formattedDate}
            </time>
        )}
        <h3 class="blog-post-card__title">
            {title}
        </h3>
    </div>
</a>

<style>
    .blog-post-card {
        display: block;
        position: relative;
        height: 100%;
        overflow: hidden;
        background: white;
        border-radius: 0.75rem;
        border: 2px solid #000;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .blog-post-card:hover {
        border-color: var(--color-primary);
        transform: translateY(-4px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
    }

    .blog-post-card__image-container {
        position: relative;
        aspect-ratio: 16 / 9;
        overflow: hidden;
        border-bottom: 2px solid #000;
        transition: border-color 0.3s ease;
    }

    .blog-post-card:hover .blog-post-card__image-container {
        border-color: var(--color-primary);
    }

    .blog-post-card__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .blog-post-card__image-placeholder {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
    }

    .blog-post-card:hover .blog-post-card__image {
        transform: scale(1.05);
    }

    .blog-post-card__overlay {
        position: absolute;
        inset: 0;
        background: var(--color-primary);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .blog-post-card:hover .blog-post-card__overlay {
        opacity: 0.1;
    }

    .blog-post-card__content {
        padding: 1.5rem;
    }

    .blog-post-card__date {
        display: block;
        font-size: 0.875rem;
        color: #666;
        margin-bottom: 0.5rem;
        transition: color 0.3s ease;
    }

    .blog-post-card:hover .blog-post-card__date {
        color: var(--color-primary);
    }

    .blog-post-card__title {
        font-size: 1.25rem;
        font-weight: 700;
        line-height: 1.4;
        color: #1a1a1a;
        margin: 0;
        transition: color 0.3s ease;
    }

    .blog-post-card:hover .blog-post-card__title {
        color: var(--color-primary);
    }

    /* Ensure text doesn't wrap too much on smaller cards */
    @media (max-width: 640px) {
        .blog-post-card__title {
            font-size: 1.125rem;
        }
        
        .blog-post-card__content {
            padding: 1.25rem;
        }
    }
</style>

