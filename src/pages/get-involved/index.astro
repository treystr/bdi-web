}
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription} fullscreenHero={true}>
    <FullScreenHero content={heroContent} />
    
    <!-- Main involvement CTA -->
    <CtaBanner
        content={involvementCta}
        variant="contained"
        background="base"
        padding="large"
    />
    
    <!-- Involvement features -->
    <Features 
        content={involvementFeatures} 
        background="light" 
        padding="large"
    />
</Layout>