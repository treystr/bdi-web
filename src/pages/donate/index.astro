---
import Layout from "@layouts/Layout.astro"
import PageHeader from "@components/sections/PageHeader.astro"
import CtaBanner from "@components/sections/CtaBanner.astro"

const seoTitle = "Support Our Mission"
const seoDescription = "Help Transform the Nation's Capital into a Bitcoin Circular Economy"

const pageHeaderContent = {
    title: "Support Our Mission",
    description: "Help Transform the Nation's Capital into a Bitcoin Circular Economy"
};

const zapriteDonateUrl = "https://pay.zaprite.com/pl_1DjlHBRtHC"

// Primary CTA
const heroDonate = {
    title: "Make Your Tax-Deductible Donation",
    description: "For a tax receipt, please include your name and email when donating through Zaprite.",
    buttons: [
        {
            text: "Donate Now",
            link: zapriteDonateUrl,
            variant: "primary" as const,
            target: "_blank" as const
        }
    ]
}
---

<Layout title={seoTitle} description={seoDescription}>
    <PageHeader title={pageHeaderContent.title} description={pageHeaderContent.description} background="base" />
    
    <!-- Primary Donation CTA -->
    <CtaBanner 
        content={heroDonate}
        variant="full-width"
        background="base"
        padding="xsmall"
        buttonSize="xxl"
    />

    <!-- Mission & Impact Section -->
    <section class="py-small bg-background-alt">
        <div class="site-container--content mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <div data-aos="fade-up" data-aos-delay="100">
                    <h3 class="text-headline text-xl md:text-2xl mb-4">Why DC?</h3>
                    <p class="text-body-base text-base md:text-lg leading-relaxed opacity-90 mb-6">
                        Because it's America's capital—a place that belongs to everyone. People from across the country and around the world come here to connect with the ideals that shaped our nation. Showing that Bitcoin works as real money in DC sends a message that reaches far beyond the city itself.
                    </p>
                </div>

                <div data-aos="fade-up" data-aos-delay="200">
                    <h3 class="text-headline text-xl md:text-2xl mb-4">Your Donation Helps Us:</h3>
                    <ul class="space-y-3 mb-6 text-body-base text-base md:text-lg leading-relaxed opacity-90 list-disc list-inside">
                        <li>Meet business owners face-to-face, helping them accept Bitcoin and strengthen their communities.</li>
                        <li>Host hands-on workshops teaching self-custody, Lightning, and privacy tools.</li>
                        <li>Organize local meetups and outreach events that build knowledge and trust.</li>
                        <li>Create and share open-source resources that make Bitcoin practical for everyone.</li>
                    </ul>
                </div>

                <div data-aos="fade-up" data-aos-delay="300">
                    <p class="text-body-base text-base md:text-lg leading-relaxed font-semibold mb-8">
                        We're building a Bitcoin circular economy in Washington, DC—one business, one neighborhood, one block at a time.
                    </p>
                </div>
            </div>
        </div>
    </section>
</Layout>