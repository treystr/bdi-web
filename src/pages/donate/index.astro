---
import Layout from "@layouts/Layout.astro"
import PageHeader from "@components/sections/PageHeader.astro"
import SplitPanel from "@components/sections/SplitPanel.astro"
import mapPinImage from "@assets/images/map_pin.jpg"
import geyserImage from "@assets/images/geyser.jpg"

const seoTitle = "Support Our Mission"
const seoDescription = "Support the Bitcoin District Initiative's mission to build a Bitcoin circular economy in Washington, DC. Your tax-deductible donation funds education and business adoption."

const pageHeaderContent = {
    title: "Support Our Mission",
    description: "If you like our proof-of-work and want to see more of it, please support us with a donation in fiat or Bitcoin. Every sat goes a long way to ensuring we can continue to reach and educate new people, businesses and organizations across the DMV."
};

const zapriteDonateUrl = "https://pay.zaprite.com/pl_1DjlHBRtHC"

// Primary Donation Split Panel
const heroDonate = {
    headline: "Help us turn DC into a Bitcoin hub with a tax-deductible donation.",
    description: "For a tax receipt, please include your name and email when donating through Zaprite. EIN: 39-2961184",
    image: {
        src: mapPinImage,
        alt: "Washington DC map with Bitcoin District location"
    },
    buttons: [
        {
            text: "Donate Now",
            link: zapriteDonateUrl,
            variant: "primary" as const,
            target: "_blank" as const
        },
        {
            text: "Supporters ðŸ§¡",
            link: "/thanks",
            variant: "secondary" as const,
            target: "_self" as const
        }
    ]
}

// Geyser support Split Panel
const geyserContent = {
    headline: "Find us on Geyser.",
    description: "Geyser is a popular crowdfunding platform powered by Bitcoin.",
    image: {
        src: geyserImage,
        alt: "Geyser crowdfunding platform"
    },
    buttons: [
        {
            text: "Support us on Geyser",
            link: "https://geyser.fund/project/bitcoindc",
            variant: "primary" as const,
            target: "_blank" as const
        }
    ]
}
---

<Layout title={seoTitle} description={seoDescription}>
    <PageHeader title={pageHeaderContent.title} description={pageHeaderContent.description} background="base" />
    
    <!-- Primary Donation Split Panel -->
    <SplitPanel 
        content={heroDonate}
        imagePosition="right"
        imageAspect="4/3"
        background="light"
        padding="base"
    />

    <!-- Tax Information Section -->
    <section class="py-small bg-background">
        <div class="site-container--content mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <div data-aos="fade-up" class="text-center">
                    <h3 class="text-headline text-xl md:text-2xl mb-3">Tax-Deductible Donations</h3>
                    <p class="text-body-base text-base md:text-lg mb-2">
                        Bitcoin District Initiative is a 501(c)(3) tax-exempt organization.
                    </p>
                    <p class="text-body-base text-lg md:text-xl font-semibold">
                        EIN: 39-2961184
                    </p>
                    <p class="text-body-base text-sm md:text-base mt-3 opacity-90">
                        All gifts and donations are tax-deductible to the extent allowed by law.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Mission & Impact Section -->
    <section class="py-small bg-background-alt">
        <div class="site-container--content mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <div data-aos="fade-up" data-aos-delay="100">
                    <h3 class="text-headline text-xl md:text-2xl mb-4">Why DC?</h3>
                    <p class="text-body-base text-base md:text-lg leading-relaxed opacity-90 mb-6">
                        Because it's America's capitalâ€”a place that belongs to everyone. People from across the country and around the world come here to connect with the ideals that shaped our nation. Showing that Bitcoin works as real money in DC sends a message that reaches far beyond the city itself.
                    </p>
                </div>

                <div data-aos="fade-up" data-aos-delay="200">
                    <h3 class="text-headline text-xl md:text-2xl mb-4">Your Donation Helps Us:</h3>
                    <ul class="space-y-3 mb-6 text-body-base text-base md:text-lg leading-relaxed opacity-90 list-disc list-inside">
                        <li>Meet local business owners where they are, helping them understand and accept Bitcoin.</li>
                        <li>Develop educational resources and host hands-on workshops teaching self-custody, Lightning, and privacy tools.</li>
                        <li>Strengthen the network of Bitcoiners in DCâ€”where education, trust, and shared purpose come together to advance sound money and human flourishing.</li>
                    </ul>
                </div>

                <div data-aos="fade-up" data-aos-delay="300">
                    <p class="text-body-base text-base md:text-lg leading-relaxed font-semibold mb-8">
                        We're building a Bitcoin circular economy in Washington, DCâ€”one business, one neighborhood, one block at a time.
                    </p>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Geyser Support Split Panel -->
    <SplitPanel 
        content={geyserContent}
        imagePosition="left"
        imageAspect="4/3"
        background="light"
        padding="base"
        hideImageOnMobile={true}
    />
</Layout>