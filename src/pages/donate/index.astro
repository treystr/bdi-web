---
import Layout from "@layouts/Layout.astro"
import PageHeader from "@components/sections/PageHeader.astro"
import SplitPanel from "@components/sections/SplitPanel.astro"
import Button from "@components/ui/Button.astro"
import mapPinImage from "@assets/images/map_pin.jpg"

const seoTitle = "Support Our Mission"
const seoDescription = "Support the Bitcoin District Initiative's mission to build a Bitcoin circular economy in DC. Your tax-deductible donation funds education and business adoption."

const pageHeaderContent = {
    title: "Support Our Mission",
    description: "If you like our proof-of-work and want to see more of it, please support us with a donation in fiat or Bitcoin. Every sat helps us reach and educate new people, businesses, and organizations across the DMV."
};

const zapriteDonateUrl = "https://pay.zaprite.com/pl_1DjlHBRtHC"

// Primary Donation Split Panel
const heroDonate = {
    headline: "Help us turn DC into a Bitcoin hub with a tax-deductible donation.",
    description: "For a tax receipt, please include your name and email when donating through Zaprite. EIN: 39-2961184",
    image: {
        src: mapPinImage,
        alt: "Washington DC map with Bitcoin District location"
    },
    buttons: [
        {
            text: "Donate Now",
            link: zapriteDonateUrl,
            variant: "primary" as const,
            target: "_blank" as const
        },
        {
            text: "Supporters ðŸ§¡",
            link: "/thanks",
            variant: "secondary" as const,
            target: "_self" as const
        }
    ]
}

// Other ways to donate options
const otherDonationOptions = [
    {
        title: "Daffy",
        description: "Donate through Daffy, a donor-advised fund platform. Lower your income taxes with a charitable deduction.",
        link: "https://www.daffy.org/charities/392961184-bitcoin-district-initiative-washington-dc",
        emoji: "ðŸ’™"
    },
    {
        title: "DAF Direct",
        description: "Make a donation directly from your donor-advised fund through DAF Direct's streamlined platform.",
        link: "https://www.dafdirect.org/DAFDirect/daflink?_dafdirect_settings=MzkyOTYxMTg0XzIxMTFfNWNjMDFkYmItNGNmNy00MjZjLTkxMTctNGRlN2QxMzQxNDNm&designatedText=Qml0Y29pbiBFZHVjYXRpb24gYW5kIENvbW11bml0eSBPdXRyZWFjaCBpbiBEQw==&amountValue=",
        emoji: "ðŸŽ¯"
    },
    {
        title: "Geyser",
        description: "Support us on Geyser, a popular crowdfunding platform powered by Bitcoin.",
        link: "https://geyser.fund/project/bitcoindc",
        emoji: "ðŸŒŠ"
    }
]
---

<Layout title={seoTitle} description={seoDescription}>
    <PageHeader title={pageHeaderContent.title} description={pageHeaderContent.description} background="base" />
    
    <!-- Primary Donation Split Panel -->
    <SplitPanel 
        content={heroDonate}
        imagePosition="right"
        imageAspect="4/3"
        background="light"
        padding="base"
    />
    
    <!-- Other Ways to Donate Section -->
    <section class="py-small bg-background-light">
        <div class="site-container--content mx-auto px-4">
            <div class="max-w-6xl mx-auto">
                <div class="text-center mb-12" data-aos="fade-up">
                    <h2 class="text-headline text-2xl md:text-3xl mb-4">Other Ways to Donate</h2>
                    <p class="text-body-base text-base md:text-lg opacity-90 max-w-2xl mx-auto">
                        Choose the donation method that works best for you. All donations are tax-deductible and help us build DC's Bitcoin circular economy.
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {otherDonationOptions.map((option, index) => (
                        <div 
                            class="bg-white rounded-lg border border-black p-6 flex flex-col h-full transition-all hover:shadow-lg"
                            data-aos="fade-up"
                            data-aos-delay={index * 100}
                        >
                            <div class="flex items-center gap-3 mb-4">
                                <div class="w-12 h-12 rounded-full bg-background/50 border border-black/10 flex items-center justify-center flex-shrink-0">
                                    <span role="img" aria-label={option.title} class="text-2xl">
                                        {option.emoji}
                                    </span>
                                </div>
                                <h3 class="text-headline text-xl font-semibold">
                                    {option.title}
                                </h3>
                            </div>
                            
                            <p class="text-body-base text-base leading-relaxed opacity-90 mb-6 flex-grow">
                                {option.description}
                            </p>
                            
                            <Button
                                href={option.link}
                                variant="primary"
                                target="_blank"
                                class="w-full"
                            >
                                Donate via {option.title} â†’
                            </Button>
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </section>

        <!-- Tax Information Section -->
        <section class="py-small bg-background-light">
            <div class="site-container--content mx-auto px-4">
                <div class="max-w-4xl mx-auto">
                    <div data-aos="fade-up" class="p-8 bg-white rounded-lg border border-black">
                        <h3 class="text-headline text-2xl md:text-3xl mb-6 text-center">Tax-Deductible Donations</h3>
                        
                        <div class="space-y-4 text-center mb-6">
                            <p class="text-body-base text-base md:text-lg leading-relaxed">
                                Bitcoin District Initiative is a <strong>501(c)(3) tax-exempt organization</strong> as recognized by the Internal Revenue Service (IRS).
                            </p>
                            
                            <p class="text-body-base text-lg md:text-xl font-semibold">
                                EIN: 39-2961184
                            </p>
                            
                            <p class="text-body-base text-base md:text-lg leading-relaxed opacity-90">
                                All gifts and donations are <strong>tax-deductible</strong> to the extent allowed by law.
                            </p>
                        </div>
    
                        <div class="flex flex-wrap gap-4 justify-center mt-8">
                            <a href="/docs/501c3" class="text-primary hover:underline font-semibold flex items-center gap-1">
                                View IRS Determination Letter â†’
                            </a>
                            <span class="text-body-base opacity-50">|</span>
                            <a href="/transparency" class="text-primary hover:underline font-semibold flex items-center gap-1">
                                Learn More About Our Transparency â†’
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
</Layout>