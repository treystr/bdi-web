---
import Layout from '@layouts/Layout.astro';
import InnerHero from '@components/sections/InnerHero.astro';
import TeamGrid from '@components/sections/TeamGrid.astro';
import { withRandomHeroContent } from '@utils/randomHeroImage';
import { valueLists } from '@data/values';
import { narratives } from '@data/narratives';

const seoTitle = "About Us";
const seoDescription = "About the Bitcoin District Initiative";

// Using random hero background - comment this out and use the one below to go back to specific image
const heroContent = withRandomHeroContent({
    title: "About Us",
    randomBackground: true,
    overlayOpacity: 0.6,
    description: "The Bitcoin District Initiative is organized as a 501(c)(3) nonprofit organization dedicated to advancing Bitcoin adoption in Washington, DC. Tax exempt status is pending IRS approval.",
});

---

<Layout title={seoTitle} description={seoDescription}>
    <InnerHero content={heroContent}  />

    <!-- Our Mission Section -->
    <div class="site-container mx-auto px-4 mt-16 mb-16 text-left">
        <h2 class="text-3xl font-bold mb-4" data-aos="fade-up">{narratives.mission.title}</h2>
        <p class="text-lg opacity-90" data-aos="fade-up" data-aos-delay="100">
            {narratives.mission.content}
        </p>
    </div>

    <!-- Who We Are Section -->
    <div class="site-container mx-auto px-4 mb-16 text-left">
        <h2 class="text-3xl font-bold mb-4" data-aos="fade-up">{narratives['who-we-are'].title}</h2>
        <p class="text-lg opacity-90" data-aos="fade-up" data-aos-delay="100">
            {narratives['who-we-are'].content}
        </p>
    </div>

    <!-- Board of Directors Section -->
    <div class="site-container mx-auto px-4 mb-2 text-left">
        <h2 class="text-3xl font-bold mb-4" data-aos="fade-up">Board of Directors</h2>
    </div>
    <TeamGrid paddingTop={undefined} paddingBottom={undefined} />

    <!-- Our Values Section -->
    <div class="site-container mx-auto px-4 mt-16 mb-24 text-left">
        <h2 class="text-3xl font-bold mb-4" data-aos="fade-up">Our Values</h2>
        <div class="text-lg opacity-90 space-y-4" data-aos="fade-up" data-aos-delay="100">
            {valueLists.main.values.map((value) => (
                <p>
                    <strong>{value.title}:</strong> {value.description}
                </p>
            ))}
        </div>
    </div>
</Layout>