---
import Layout from '@layouts/Layout.astro';
import FullScreenHero from '@components/sections/FullScreenHero.astro';
import TeamGrid from '@components/sections/TeamGrid.astro';
import Button from '@components/ui/Button.astro';
import { valueLists } from '@data/values';
import { narratives } from '@data/narratives';
import { community } from '@data/community';

const seoTitle = "About Us";
const seoDescription = "About the Bitcoin District Initiative";

const heroContent = {
    title: "About Us",
    description: "We're proving that a thriving Bitcoin circular economy can take root right here in Washington, DCâ€”showing that when it works here, it can work anywhere.",
    contentPosition: 'center',
    textAlign: 'center'
};

---

<Layout title={seoTitle} description={seoDescription} fullscreenHero={true}>
    <FullScreenHero content={heroContent}  />

    <!-- Our Mission Section -->
    <div class="site-container--content mx-auto px-4 mt-16 mb-16 text-left">
        <h2 class="text-3xl font-bold mb-4" data-aos="fade-up">{narratives.mission.title}</h2>
        <p class="text-lg opacity-90" data-aos="fade-up" data-aos-delay="100">
            {narratives.mission.content}
        </p>
    </div>

    <TeamGrid padding="small" alignment="left" title="Board of Directors" description="Board members are not compensated for their board member duties and do not benefit from donations." memberType="bod" />
    <TeamGrid padding="small" title="Advisors" memberType="advisor" />
    <TeamGrid padding="small" title="Volunteers" memberType="volunteer" />
    
</Layout>