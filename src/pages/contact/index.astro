---
import Layout from "@layouts/Layout.astro"
import FullScreenHero from "@components/sections/FullScreenHero.astro"
import ContactInfo from "@components/sections/ContactInfo.astro"

const heroContent = {
    title: "Contact Us",
    description: 'Please reach out to us with any questions or ideas on how you can get involved.',
    contentPosition: 'center',
    textAlign: 'center'
};
---

<Layout title="Contact Us" description="Contact us for more information" fullscreenHero={true}>
    <FullScreenHero content={heroContent} />
    <ContactInfo background="base" padding="base" content={{ title: 'Reach Out', description: 'We look forward to hearing from you!' }} />
</Layout>