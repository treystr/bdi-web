---
import Layout from "@layouts/Layout.astro"
import InnerHero from "@components/sections/InnerHero.astro"
import ContactInfo from "@components/sections/ContactInfo.astro"
import { withRandomHeroContent } from '@utils/randomHeroImage';

const heroContent = withRandomHeroContent({
    title: "Contact Us",
    description: 'Please reach out to us with any questions or ideas on how you can get involved.',
    randomBackground: true,
    overlayOpacity: 0.6
});
---

<Layout title="Contact Us" description="Contact us for more information">
    <InnerHero content={heroContent} />
    <ContactInfo background="base" padding="base" content={{ title: 'Reach Out', description: 'We look forward to hearing from you!' }} />
</Layout>