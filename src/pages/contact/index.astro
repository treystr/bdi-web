---
import Layout from "@layouts/Layout.astro"
import PageHeader from "@components/sections/PageHeader.astro"
import ContactInfo from "@components/sections/ContactInfo.astro"

const pageHeaderContent = {
    title: "Contact Us",
    description: 'Please reach out to us with any questions or ideas on how you can get involved.'
};
---

<Layout title="Contact Us" description="Contact the Bitcoin District Initiative to learn about our programs, volunteer opportunities, and how we're building a Bitcoin circular economy in Washington, DC.">
    <PageHeader title={pageHeaderContent.title} description={pageHeaderContent.description} background="base" />
    <ContactInfo background="base" padding="xsmall" content={{ title: 'We look forward to hearing from you!', description: '' }} />
</Layout>