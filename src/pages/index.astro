---
import Layout from '@layouts/Layout.astro';
import FullScreenHero from '@components/sections/FullScreenHero.astro';
import InitiativeCards from '@components/sections/InitiativeCards.astro';
import Features from '@components/sections/Features.astro';
import { featureLists } from '@data/features';
import { narratives } from '@data/narratives';
import heroImage from '../assets/images/hero/hero0.jpg';

const seoTitle = "Home";
const seoDescription = "Building a Bitcoin Circular Economy in the Nation’s Capital";

const heroContent = {
    title: "Building a Bitcoin Circular Economy in the Nation's Capital",
    description: "The Bitcoin District Initiative is a 501(c)(3) tax-exempt nonprofit organization dedicated to advancing grassroots Bitcoin adoption in Washington, DC.",
    
    buttons: [
        {
            text: "Our Initiatives",
            link: "/initiatives",
            target: "_self",
            hideOnDesktop: true
        },
        {
            text: "Donate",
            link: "/donate",
            target: "_self"
        }
    ],
    backgroundImage: heroImage,
    contentPosition: "center" as const,
    textAlign: "center" as const
}

const featuresSection = {
    title: "Our Mission",
    description: narratives.mission.content,
    features: featureLists.main.features,
}

const initiativesSection = {
    eyebrow: "Our Impact",
    headline: "Kickoff Initiatives",
    description: "We're bringing Bitcoin to Main Street DC with these kickoff initiatives.",
}

const FooterCta = {
    eyebrow: "Take Initiative",
    title: "Get Involved in Bitcoin Education Across DC",
    description: "Join our mission to advance grassroots Bitcoin adoption in Washington, DC. Whether through volunteering, collaboration, or support, you can help empower neighbors with the knowledge and tools for economic freedom and personal sovereignty.",
    hideCta: false,
    button: {
        text: "See How You Can Get Involved",
        link: "/get-involved",
        target: "_self"
    }
}

const mainCta = {
    eyebrow: "Start Your Journey",
    title: "Learn Bitcoin With Confidence",
    description: "Whether you’re new to Bitcoin or ready to go deeper, our hands-on education makes sound money simple and practical. With a focus on self-sovereignty, privacy, and personal empowerment, we’re building a community of learners and leaders across Washington, DC.",
    button: {
        text: "Start Learning",
        link: "/contact",
        variant: "primary" as const,
        target: "_self" as const
    }
};

---

<Layout title={seoTitle} description={seoDescription} fullscreenHero={true}>
    <FullScreenHero content={heroContent} />
    <InitiativeCards content={initiativesSection} background="light" padding="base" />
    <!--  <Features content={featuresSection} padding="base" background="base" /> -->
</Layout>