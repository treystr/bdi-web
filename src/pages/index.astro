---
import Layout from '@layouts/Layout.astro';
import FullScreenHero from '@components/sections/FullScreenHero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import InitiativeCards from '@components/sections/InitiativeCards.astro';
import CtaBanner from '@components/sections/CtaBanner.astro';
import heroImage from '../assets/images/hero/hero-bizgrid.jpg';
import bitcoinAcceptedImage from '../assets/images/market_general.jpg';
import savingFutureImage from '../assets/images/wethepeople.jpg';

const seoTitle = "Home";
const seoDescription = "Our Initiative is building a grassroots Bitcoin circular economy in Washington, DC through education, business adoption, and community outreach.";

const heroContent = {
    title: "Building a Bitcoin Circular Economy in the Nation's Capital",
    description: "The Bitcoin District Initiative is a 501(c)(3) tax-exempt not-for-profit organization dedicated to advancing grassroots Bitcoin adoption in Washington, DC.",
    overlayOpacity: 0.79,
    
    buttons: [
        {
            text: "Our Initiatives",
            link: "/initiatives",
            target: "_self",
            hideOnDesktop: true
        },
        {
            text: "Donate",
            link: "/donate",
            target: "_self"
        }
    ],
    backgroundImage: heroImage,
    contentPosition: "center" as const,
    textAlign: "center" as const
}

const initiativesSection = {
    eyebrow: "Our Impact",
    headline: "Kickoff Projects",
    description: "We're getting out into the community to engage with local businesses to help them understand Bitcoin and how to accept it.",
}

const joinDistrictSection = {
    eyebrow: "MEET THE COMMUNITY",
    title: "Join Bitcoin District",
    description: "Bitcoin District is the grassroots Bitcoin community in Washington, DC—an organic, social group built around meetups, learning, and human connections. If you want to get involved, start by joining the community—come to a meetup, learn together, and be part of what's growing here in DC. The Bitcoin District Initiative grew out of this very community!",
    button: {
        text: "Visit BitcoinDistrict.org",
        link: "https://bitcoindistrict.org",
        target: "_blank" as const,
        variant: "primary" as const
    }
}

const bitcoinAcceptedSection = {
    headline: "Bitcoin Accepted Here",
    description: "It's never been easier for a business to accept Bitcoin from their customers. Tap into the local Bitcoin community by posting a Bitcoin Accepted Here sign in your shop!",
    image: {
        src: bitcoinAcceptedImage,
        alt: "Local business accepting Bitcoin"
    }
};

const savingFutureSection = {
    headline: "Saving for the Future",
    description: "Unlike the dollar, Bitcoin's purchasing power grows over time due to its fixed supply and increasing demand. While dollars are relatively stable in the short term, they lose value over time.",
    image: {
        src: savingFutureImage,
        alt: "Bitcoin savings concept"
    }
};

---

<Layout title={seoTitle} description={seoDescription} fullscreenHero={true}>
    <FullScreenHero content={heroContent} />
    <SplitPanel 
        content={bitcoinAcceptedSection} 
        imagePosition="left" 
        background="base" 
        padding="large" 
        imageAspect="4/3"
    />
    <SplitPanel 
        content={savingFutureSection} 
        imagePosition="right" 
        background="light" 
        padding="large" 
        imageAspect="4/3"
    />
    <InitiativeCards content={initiativesSection} background="light" padding="base" />
    <CtaBanner 
        content={joinDistrictSection} 
        background="dark" 
        padding="large" 
        variant="full-width" 
    />
</Layout>