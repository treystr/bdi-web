---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import InitiativeCards from '@components/sections/InitiativeCards.astro';
import CtaBanner from '@components/sections/CtaBanner.astro';
import MerchantMap from '@components/sections/MerchantMap.astro';
import BlogPostCarousel from '@components/sections/BlogPostCarousel.astro';
import heroImage from '../assets/images/hero/hero-market.jpg';
import understandingBitcoinImage from '../assets/images/compasscoffee.jpg';
import bitcoinAcceptedImage from '../assets/images/bitcoinacceptedheremarket.jpg';
import savingFutureImage from '../assets/images/btcvsusd.jpg';

const seoTitle = "Home";
const seoDescription = "Our Initiative is building a grassroots Bitcoin circular economy in Washington, DC through education, business adoption, and community outreach.";

const heroContent = {
    title: "Bitcoin Is Working — Right Here in DC",
    description: "Join a growing network of DC residents and businesses using Bitcoin every day. We’ll help you accept payments, save securely, and use Bitcoin with confidence through local workshops and one-on-one support.",
    overlayOpacity: 0.60, // Lighter overlay since gradient adds coverage
    height: "large" as const, // 65vh for modern balanced look
    layout: "centered" as const,
    background: "base" as const, // Gradient color for text readability
    gradientOverlay: false,
    buttons: [
        {
            text: "Get Started",
            link: "/contact",
            size: "xl" as const,
            target: "_self"
        }
    ],
    backgroundImage: heroImage,
    contentPosition: "center" as const,
    textAlign: "center" as const
}

const initiativesSection = {
    eyebrow: "Our Impact",
    headline: "Kickoff Projects",
    description: "We’re working block by block across DC — hosting workshops, onboarding merchants, and building real connections that make Bitcoin part of daily life.",
}

const understandingBitcoinSection = {
    eyebrow: "THE BITCOIN DISTRICT INITIATIVE",
    headline: "Understanding Bitcoin",
    description: "There’s a lot of noise about “crypto” today. The Bitcoin District Initiative helps DC residents and businesses understand why Bitcoin is different — and why it matters. Our focus is clear education and practical learning so you can ask questions, build confidence, and connect with customers who use Bitcoin.",
    image: {
        src: understandingBitcoinImage,
        alt: "Understanding Bitcoin and monetary sovereignty"
    }
};

const joinDistrictSection = {
    eyebrow: "MEET THE COMMUNITY",
    title: "Join Bitcoin District",
    description: "Bitcoin District started as a group of friends and small business owners learning together. Today, it’s a citywide community of merchants, educators, and neighbors helping each other use Bitcoin in everyday life. Come to a meetup, learn from peers, and share your experience",
    button: {
        text: "Visit BitcoinDistrict.org",
        link: "https://bitcoindistrict.org",
        target: "_blank" as const,
        variant: "primary" as const
    }
}

const bitcoinAcceptedSection = {
    headline: "Why Bitcoin for Your Business?",
    description: "Credit card fees, chargebacks, and inflation cost small businesses thousands each year. With Bitcoin, you get instant payments that can’t be reversed or frozen — and you keep more of what you earn. Want help setting it up? We’ll walk you through every step.",
    image: {
        src: bitcoinAcceptedImage,
        alt: "Local business accepting Bitcoin"
    }
};

const savingFutureSection = {
    headline: "Build Real Wealth",
    description: "Saving a portion of your earnings in Bitcoin gives your business a reserve that holds value over time. With a fixed supply of 21 million, Bitcoin helps preserve purchasing power and gives you flexibility — whether reinvesting, covering slow months, or preparing for new opportunities.",
    image: {
        src: savingFutureImage,
        alt: "Bitcoin grows while dollars lose value"
    }
};

const blogCarouselContent = {
    eyebrow: "Latest Updates",
    title: "Ready to Learn More?",
    description: "Bitcoin can be confusing — we’re here to make it simple. Explore our latest guides and community stories to learn at your own pace.",
    button: {
        text: "View All Posts",
        link: "/blog",
        variant: "primary" as const
    }
};

---

<Layout title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <SplitPanel 
        content={understandingBitcoinSection} 
        imagePosition="right" 
        background="light" 
        padding="large" 
        imageAspect="4/3"
    />
    <SplitPanel 
        content={bitcoinAcceptedSection} 
        imagePosition="left" 
        background="base" 
        padding="large" 
        imageAspect="4/3"
    >
        <ul class="mt-6 space-y-3 text-base opacity-90">
            <li>✔ Keep more of what you earn</li>
            <li>✔ Accept payments instantly, worldwide</li>
            <li>✔ Protect your business from rising costs</li>
        </ul>
    </SplitPanel>
    <SplitPanel 
        content={savingFutureSection} 
        imagePosition="right" 
        background="light" 
        padding="large" 
        imageAspect="4/3"
    />
    <InitiativeCards content={initiativesSection} background="base" padding="small" />
    <MerchantMap 
        title="Put Your Business on the BTC Map"
        description="Put your business on the map — literally. Joining DC’s Bitcoin merchants means joining a network that values local commerce and economic freedom. The BTC Map helps customers find and support you right away."
        topBackground="dark" 
        bottomBackground="light"
        padding="base"
    />
    <BlogPostCarousel 
    content={blogCarouselContent}
    background="light"
    padding="small"
    showFeatured={false}
    fallbackToAll={true}
    minPosts={3}
    showLatest={true}
    limit={8}
/>
    <CtaBanner 
        content={joinDistrictSection} 
        background="light" 
        padding="small" 
        variant="full-width" 
    />
</Layout>