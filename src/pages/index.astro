---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import InitiativeCards from '@components/sections/InitiativeCards.astro';
import CtaBanner from '@components/sections/CtaBanner.astro';
import MerchantMap from '@components/sections/MerchantMap.astro';
import BlogPostCarousel from '@components/sections/BlogPostCarousel.astro';
import heroImage from '../assets/images/hero/hero-market.jpg';
import understandingBitcoinImage from '../assets/images/studybtc_compass.jpg';
import bitcoinAcceptedImage from '../assets/images/bitcoinacceptedheremarket.jpg';
import savingFutureImage from '../assets/images/btcvsusd.jpg';

const seoTitle = "Home";
const seoDescription = "Our Initiative is building a grassroots Bitcoin circular economy in Washington, DC through education, business adoption, and community outreach.";

const heroContent = {
    title: "Step into the future of local commerce by embracing Bitcoin",
    description: "Join a growing community of DC merchants embracing Bitcoin and connecting with new customers. Discover how this new form of payment and savings can add value to your business and help you stay ahead of the curve.",
    overlayOpacity: 0.60, // Lighter overlay since gradient adds coverage
    height: "large" as const, // 65vh for modern balanced look
    layout: "centered" as const,
    background: "base" as const, // Gradient color for text readability
    gradientOverlay: false,
    buttons: [
        {
            text: "Our Initiatives",
            link: "/initiatives",
            size: "xl" as const,
            target: "_self"
        }
    ],
    backgroundImage: heroImage,
    contentPosition: "center" as const,
    textAlign: "center" as const
}

const initiativesSection = {
    eyebrow: "Our Impact",
    headline: "Kickoff Projects",
    description: "We're getting out into the community to engage with local businesses to help them understand Bitcoin and how to accept it.",
}

const understandingBitcoinSection = {
    eyebrow: "THE BITCOIN DISTRICT INITIATIVE",
    headline: "Understanding Bitcoin",
    description: "There’s a lot of noise out there about \"crypto & digital assets\", and it’s easy to get lost in it. The Bitcoin District Initiative helps people and businesses in Washington, DC understand how Bitcoin is special and why it matters. We focus on education, not hype, making it simple to learn, ask questions, and reach a growing community of customers who want to transact with Bitcoin.",
    image: {
        src: understandingBitcoinImage,
        alt: "Understanding Bitcoin and monetary sovereignty"
    }
};

const joinDistrictSection = {
    eyebrow: "MEET THE COMMUNITY",
    title: "Join Bitcoin District",
    description: "Bitcoin District is the grassroots Bitcoin community in Washington, DC—an organic, social group built around meetups, learning, and human connections. If you want to get involved, start by joining the community—come to a meetup, learn together, and be part of what's growing here in DC. The Bitcoin District Initiative grew out of this very community!",
    button: {
        text: "Visit BitcoinDistrict.org",
        link: "https://bitcoindistrict.org",
        target: "_blank" as const,
        variant: "primary" as const
    }
}

const bitcoinAcceptedSection = {
    headline: "Bitcoin Accepted in DC",
    description: "Accepting Bitcoin helps your business reach a growing local network of customers who prefer paying directly and supporting merchants who do the same. It’s simple to start — no chargebacks, lower fees, and payments that settle instantly. Post a Bitcoin Accepted Here sign and show your place is part of DC’s emerging Bitcoin economy.",
    image: {
        src: bitcoinAcceptedImage,
        alt: "Local business accepting Bitcoin"
    }
};

const savingFutureSection = {
    headline: "Build Real Wealth",
    description: "When you save a portion of your earnings in Bitcoin, it becomes a modern, inflation-resistant reserve for your business. With a fixed supply of 21 million, Bitcoin helps preserve purchasing power and create future optionality for your business — whether for reinvestment, covering slow months, or for using it as collateral for a loan.",
    image: {
        src: savingFutureImage,
        alt: "Bitcoin grows while dollars lose value"
    }
};

const blogCarouselContent = {
    eyebrow: "Latest Updates",
    title: "Ready to Learn More?",
    description: "Bitcoin can be confusing. We're here to help you cut through the noise. Check out our blog for the latest news and insights.",
    button: {
        text: "View All Posts",
        link: "/blog",
        variant: "primary" as const
    }
};

---

<Layout title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <SplitPanel 
        content={understandingBitcoinSection} 
        imagePosition="right" 
        background="light" 
        padding="large" 
        imageAspect="4/3"
    />
    <SplitPanel 
        content={bitcoinAcceptedSection} 
        imagePosition="left" 
        background="base" 
        padding="large" 
        imageAspect="4/3"
    />
    <SplitPanel 
        content={savingFutureSection} 
        imagePosition="right" 
        background="light" 
        padding="large" 
        imageAspect="4/3"
    />
    <InitiativeCards content={initiativesSection} background="base" padding="small" />
    <MerchantMap 
        title="Put Your Business on the BTC Map"
        description="Let's put your business on the map-- literally! When you accept Bitcoin, you join a community of forward-thinking DC merchants strengthening local commerce and economic freedom. The BTC Map makes it easy for Bitcoiners to find and support your business."
        topBackground="dark" 
        bottomBackground="light"
        padding="base"
    />
    <BlogPostCarousel 
    content={blogCarouselContent}
    background="light"
    padding="small"
    showFeatured={true}
    fallbackToAll={true}
    minPosts={3}
    showLatest={true}
    limit={8}
/>
    <CtaBanner 
        content={joinDistrictSection} 
        background="light" 
        padding="small" 
        variant="full-width" 
    />
</Layout>