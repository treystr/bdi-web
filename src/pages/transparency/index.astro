---
import Layout from "@layouts/Layout.astro"
import FullScreenHero from "@components/sections/FullScreenHero.astro"
import CtaBanner from "@components/sections/CtaBanner.astro"
import { FileText, BarChart3, Users, Scale } from 'lucide-astro'
import heroImage from "@assets/images/hero/hero4.jpg"

const heroContent = {
    title: "Transparency",
    backgroundImage: heroImage,
    description: "We operate with transparency and integrity, guided by Bitcoin’s open-source principles to build trust and accountability in our mission to make DC a thriving Bitcoin hub.",
    contentPosition: 'center',
    textAlign: 'center'
};

const contactCta = {
    title: "Questions About Our Operations?",
    description: "We're committed to full transparency. If you have questions about our organization, finances, or operations that aren't answered here, please don't hesitate to reach out.",
    button: {
        text: "Contact Us",
        link: "/contact",
        variant: "primary" as const
    }
}
---

<Layout title="Transparency" description="View our transparency and policy documents as well as our internal and external processes of our organization." fullscreenHero={true}>
    <FullScreenHero content={heroContent} />
    
    <!-- Organizational Documents Section -->
    <section class="py-small bg-background-light">
        <div class="site-container--content mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-3xl font-bold mb-8 text-center">Organizational Documents</h2>
                
                <div class="grid md:grid-cols-2 gap-8">
                    <div class="p-6 bg-white rounded-lg border border-black">
                        <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
                            <FileText size={20} />
                            Foundational Documents
                        </h3>
                        <p class="text-body-base mb-4">Documents that define the structure, governance, and operating procedures of the organization.</p>
                        <a href="/docs/articles" class="text-primary hover:underline flex items-center gap-1 font-semibold">
                            Articles of Incorporation
                        </a>
                        <a href="/docs/bylaws" class="text-primary hover:underline flex items-center gap-1 font-semibold">
                            Adopted Bylaws
                        </a>
                        <a href="/docs/501c3" class="text-primary hover:underline flex items-center gap-1 font-semibold">
                            501(c)(3) Determination Letter
                        </a>

                    </div>

                    <div class="p-6 bg-white rounded-lg border border-black">
                        <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
                            <Scale size={20} />
                            Organizational Policies
                        </h3>
                        <div class="space-y-3">
                            <div>
                                <a href="/docs/conflict" class="font-medium text-primary hover:underline">Conflict of Interest Policy</a>
                            </div>
                            <div>
                                <a href="/docs/gift" class="font-medium text-primary hover:underline">Gift Acceptance Policy</a>
                            </div>
                            <div>
                                <a href="/docs/whistleblower" class="font-medium text-primary hover:underline">Whistleblower Protection Policy</a>
                            </div>
                            <div>
                                <a href="/docs/records" class="font-medium text-primary hover:underline">Record Retention Policy</a>
                            </div>
                            <div>
                                <a href="/docs/eeo" class="font-medium text-primary hover:underline">EEO & Non-Discrimination Policy</a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="text-center mt-8">
                    <a href="/docs" class="text-primary hover:underline text-lg font-medium">
                        View All Documents →
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Financial Transparency Section -->
    <section class="py-small">
        <div class="site-container--content mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-3xl font-bold mb-8 text-center">Financial Transparency</h2>
                
                <div class="grid md:grid-cols-2 gap-8">
                    <div class="p-6 bg-background-light rounded-lg border border-black">
                        <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
                            <BarChart3 size={20} />
                            Treasury Dashboard
                        </h3>
                        <p class="text-body-base mb-4">Real-time view of our financial status, including donations received, expenses, and current treasury balance.</p>
                        <a href="#" class="text-primary hover:underline flex items-center gap-1">
                            Coming Soon
                        </a>
                    </div>

                    <div class="p-6 bg-background-light rounded-lg border border-black">
                        <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
                            <FileText size={20} />
                            Annual Reports
                        </h3>
                        <div class="space-y-3">
                            <div>
                                <a href="/docs/eoy2025" class="font-medium text-primary hover:underline flex items-center gap-1">
                                    End of Year Report: Coming Later
                                </a>
                            </div>
                            <div>
                                <a href="/docs/impact2025" class="font-medium text-primary hover:underline flex items-center gap-1">
                                    Impact Report: Coming Later
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- Legal Information Section -->
    <section class="py-small">
        <div class="site-container--content mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-3xl font-bold mb-6">Legal Information</h2>
                <div class="p-6 bg-background-light rounded-lg border border-black">
                    <p class="text-body-base leading-relaxed">
                        Bitcoin District Initiative is a 501(c)(3) tax-exempt nonprofit organization. 
                        We are committed to maintaining full compliance with all federal, state, and local regulations governing 
                        non-profit organizations.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <CtaBanner content={contactCta} variant="contained" background="dark" padding="base" />
</Layout>